<Page x:Class="Design.Pages.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Design.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailPage">

    <Grid Name="GridDetail">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Margin="10" Padding="10" BorderBrush="{StaticResource VS2012WindowBorderBrush}" BorderThickness="1">
            <Border.Background>
                <SolidColorBrush Color="#EFEFF2" Opacity="0.7"/>
            </Border.Background>

            <DockPanel>
                <Button Foreground="DimGray" Content="Назад" FontSize="18" DockPanel.Dock="Left" HorizontalAlignment="Left" Padding="10 0"/>
                <TextBlock FontSize="18" Text="Компания"/>
            </DockPanel>
        </Border>
    </Grid>
</Page>
