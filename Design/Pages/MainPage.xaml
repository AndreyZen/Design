<Page x:Class="Design.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Design.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <DockPanel
            Margin="10"
            Height="25"
            >
            <DockPanel.Style>
                <Style TargetType="{x:Type DockPanel}">
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.7"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="GotFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Height" Duration="0:0:0.5" To="200"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="LostFocus">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Height" Duration="0:0:0.5" From="150" To="25"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>
            <TextBox Grid.Row="0"
                 Tag="Поиск: "
                 Style="{StaticResource placeHolder}" 
                 BorderBrush="{StaticResource VS2012WindowBorderBrushInactive}"
                 FontSize="18"
                 DockPanel.Dock="Top">
                <TextBox.Background>
                    <SolidColorBrush Color="#EFEFF2" Opacity="0.7"/>
                </TextBox.Background>
            </TextBox>

            <ListView FontSize="18" Margin="0 10 0 0" Foreground="DimGray" Drop="Lv_Drop" AllowDrop="True" Name="Lv" >
                <ListView.Background>
                    <SolidColorBrush Color="#EFEFF2" Opacity="0.7"/>
                </ListView.Background>
                <ListViewItem>
                    <StackPanel Orientation="Horizontal" MouseDown="StackPanel_MouseDown">
                        <TextBlock Text="Цена: " />
                        <TextBox Tag="Цена от: "  Width="150"/>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem >
                    <TextBlock Text="Дата регистрации" MouseDown="StackPanel_MouseDown" />
                </ListViewItem>
                <ListViewItem >
                    <TextBlock MouseDown="StackPanel_MouseDown"  Text="Рейтинг"/>
                </ListViewItem>
                <ListViewItem >
                    <TextBlock MouseLeftButtonDown="StackPanel_MouseDown" Text="Выручка"/>
                </ListViewItem>
                <ListViewItem >
                    <TextBlock Text="Плюсы" MouseDown="StackPanel_MouseDown" />
                </ListViewItem>
                <ListViewItem >
                    <TextBlock MouseDown="StackPanel_MouseDown"  Text="Недостатки"/>
                </ListViewItem>

            </ListView>
        </DockPanel>

        <ListView Grid.Row="1"
                  Margin="10 0"
                  Name="LvItems"
                  SelectionChanged="Lv_Selected">
            <ListView.Background>
                <SolidColorBrush Color="#EFEFF2" Opacity="0.7"/>
            </ListView.Background>
            <ListView.Style>
                <Style TargetType="{x:Type ListView}">
                    <Style.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Duration="0:0:1" Storyboard.TargetProperty="Opacity" From="0" To="0.7"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Style>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{StaticResource VS2012WindowBorderBrush}"
                            BorderThickness="1"
                            Margin="10">
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </Grid>
</Page>
